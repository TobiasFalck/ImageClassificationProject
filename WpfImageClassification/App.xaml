<Application x:Class="WpfImageClassification.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfImageClassification"
             xmlns:view ="clr-namespace:WpfImageClassification.View"
             xmlns:viewmodel ="clr-namespace:WpfImageClassification.ViewModel">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodel:MainWindowViewModel}">
            <local:MainWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:MenuViewModel}">
            <view:MenuView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodel:StatisticsViewModel}">
            <view:StatisticsView/>
        </DataTemplate>



    </Application.Resources>
</Application>
